    <div class="cont">
        <h2>Login</h2>
    
        <form method="POST">
            <label>Username</label>
            <input id="user" type="text" name="username" placeholder="Enter your name">
            <label>User Password</label>
            <input id="password" type="password" name="password" placeholder="Enter Your Password">  
            <h6 style="color:rgb(255, 1, 1)"><%- message %></h6>
            <button type="submit">Login</button>
            <a  href="registration" class="register">I dont have an account</a>
        </form>
    </div>
